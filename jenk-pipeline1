pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
                sh 'ls -la'
                echo 'Build finished....'
                script {
                    // Check if the build was triggered by a GitHub event
                    if (env.CHANGE_AUTHOR != null) {
                        echo "Build triggered by GitHub user: ${env.CHANGE_AUTHOR}"
                    } else if (env.CHANGE_ID != null) {
                        echo "Build triggered by GitHub pull request"
                    } else {
                        echo "Build triggered by other means"
                    }
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'cat README.md'
                echo 'Test finished....'
            }
        }   
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                sh 'ls -la'
                sh 'echo "THIS IS A TRIGGERED by ${env.GITHUB_EVENT_NAME}"
                echo 'Deploy finished....'
            }
        }
    }  
    post {
        success {
            echo 'Pipeline succeeded!  HO-HO-HO !!!'
        }
        failure {
            echo 'Pipeline failed!   HO-HO-HO !!!  '
        }
    }
}
